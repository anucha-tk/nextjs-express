{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2015"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@response/*": ["src/common/response/*"],
      "@error/*": ["src/common/error/*"],
      "@helpers/*": ["src/common/helpers/*"],
      "@middlewares/*": ["src/common/middlewares/*"]
    },
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
