{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "dotenv -e ../../.env.development -- nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "start": "node -r esbuild-register ./src/index.ts",
    "test": "vitest run --config vitest.config.mjs --no-file-parallelism",
    "test:int": "vitest run --config vitest.config.mjs --no-file-parallelism",
    "test:int:watch": "vitest run --config vitest.config.mjs --watch --no-file-parallelism",
    "test:cov": "vitest run --config vitest.config.mjs --coverage --no-file-parallelism"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@prisma/client": "5.15.0",
    "@repo/logger": "*",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "express-list-endpoints": "^7.1.0",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@repo/eslint-config": "*",
    "@repo/jest-presets": "*",
    "@repo/typescript-config": "*",
    "@types/bcrypt": "^5",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9",
    "@types/lodash": "^4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/passport": "^0",
    "@types/passport-jwt": "^4",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "esbuild": "^0.20.1",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "node-emoji": "^2.1.3",
    "nodemon": "^3.1.0",
    "prisma": "^5.15.0",
    "supertest": "^7.0.0",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.6",
    "vitest": "^1.6.0"
  }
}
